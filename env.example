# DATABASE
DATABASE_URL=postgresql://postgres:postgres@db:5432/telegram_vault?sslmode=disable
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=telegram_vault

# REDIS
REDIS_URL=redis://redis:6379

# TELEGRAM
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_USER_ID=your_telegram_user_id_here

# ENTERPRISE / CAPABILITIES
IS_ENTERPRISE=true
STORAGE_BACKEND=TELEGRAM
VIDEO_PROCESSING_URL=http://worker:3000

# EMAIL / CONTACT FORM (EmailJS)
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_service_id
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID_CONTACT_US=your_template_id
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_public_key

# NEXTERPRISE SETTINGS
NODE_ENV=production
PORT=3000

# FEATURE FLAGS
NEXT_PUBLIC_ENABLE_EMAIL_COLLECTION=true

# MP4 FRAGMENTATION
NEXT_PUBLIC_ENABLE_MP4_FRAGMENTATION=true
NEXT_PUBLIC_FFMPEG_MULTITHREAD=true
